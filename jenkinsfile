pipeline {
    agent aws
    tools {
        terraform 'terraform'
    }
    stages {
        stage('git checkout'){
            steps {
                git branch: 'main', credentialsId: 'git-credit', url: 'https://github.com/vemulanaveen44/jennkins-terraform.git'
            }
        }
        stage('init'){
            steps {
                ansiColor('xterm') {
                     sh 'terraform init'
                }
                
            }
        }
        stage('plan') {
            steps {
                ansiColor('xterm') {
            
                    sh 'terraform plan'
                }
                
           }
        }
        
        stage('apply') {
            steps {
                ansiColor('xterm') {
                    sh 'terraform apply -auto-approve'
                }
                
            }
        }
        
    }
}
